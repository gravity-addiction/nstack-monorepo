.modal-header
  h4.modal-title.pull-leftAWS Security Key
  button.close.pull-right(
    aria-label="Close",
    (click)="bsModalRef.hide()",
    type="button"
  )
    span(
      aria-hidden="true"
    ) &times;

.modal-body

  div(
    *ngIf!="awsInfo && key",
    lines="full",
    style="width: 100%; height: 100%; background-color: #fff;"
  )
    .row
      .col(
        offset="1",
        size="2"
      ) Host:
      .col
        label s3.{{ awsInfo.aws_region }}.amazonaws.com

    .row
      .col(
        offset="1",
        size="2"
      ) Key:
      .col
        label {{ key.aws_key }}

    .row
      .col(
        offset="1",
        size="2"
      ) Secret:
      .col
        label(
          *ngIf!="!isSecretLoading"
        ) {{ key.aws_secret }}

    .row
      .col(
        offset="1",
        size="2"
      ) Path:
      .col
        label /{{ awsInfo.aws_bucket }}/{{ awsInfo.aws_home_folder }}

    .row
      .col(size="6")
        button Close
      .col
        button(color="danger") Delete

.modal-footer
  .row
    .col(size="6")
    button.btn.btn-default(
      (click)="bsModalRef.hide()",
      type="button"
    ) Close
    .col
    button.btn.btn-default(
      color="danger",
      type="button"
    ) Delete
